<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <!--
        AOP注解实现步骤：
        1、导入相关jar包：springAOP.jar AspectJ.jar
        2、创建增强类与被增强类
        3、添加扫描bean路径
        4、为增强类、被增强类增加注解标签@Component  @AspectJ(实现动态代理对象标签)
        5、开启@AspectJ AOP配置
        6、在增强类的方法上增加被增强类要增强的方法
    -->
    <!-- 添加扫描包 -->
    <context:component-scan base-package="com.tu.mvctest.test.aopAnno"></context:component-scan>
    <!-- 开启@AspectJ -->
    <aop:aspectj-autoproxy></aop:aspectj-autoproxy>


    <!-- ==============================以上为注解配置，以下为xml配置 ================================ -->

    <!-- 被增强类 连接点 -->
    <bean id="userInfo" class="com.tu.mvctest.test.aopAnno.UserInfo"></bean>

    <!-- 增强类  动态代理类 -->
    <bean id="userInfoProxy" class="com.tu.mvctest.test.aopAnno.UserInfoProxy"></bean>

    <!-- 配置aop增强 -->
    <aop:config>
        <!-- 切入点-->
        <aop:pointcut id="p" expression="*com.tu.mvctest.entity.aopAnno.UserInfo.add()"></aop:pointcut>
        <!-- 配置切面 -->
        <aop:aspect ref="userInfoProxy">
            <aop:before method="before" pointcut-ref="p"/>
        </aop:aspect>
    </aop:config>
</beans>