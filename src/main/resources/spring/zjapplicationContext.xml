<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                          ">

    <!-- 配置注解方式，1、必须导入spring-AOP jar包
                     2、配置context名称空间，配置标签扫描路径
    配置自动扫描bean注解的包路径地址，需要引入context名称空间:http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd -->
    <!-- base-package可以设置多个扫描地址，以","隔开-->
    <!-- use-default-filters：设置扫描filter,默认为true,代表默认扫描包下的所有文件。也可以使用自己的扫描filter -->
    <context:component-scan base-package="com.tu.mvctest" use-default-filters="false">
        <!-- exclude-filter 不扫描某些包  include-filter 只扫描某些包 -->
        <!--<context:exclude-filter type="annotation" expression=""/>-->

    </context:component-scan>

</beans>